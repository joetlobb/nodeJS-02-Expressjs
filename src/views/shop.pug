extend layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/product.css")

block content
    if prods.length > 0
        .grid 
            each product in prods
                article.card.product-item 
                    header.card__header 
                        h1.product__title #{product.title}
                    .card__image 
                        img(src="https://media.istockphoto.com/id/495477978/photo/open-book.jpg?s=612x612&w=0&k=20&c=vwJ6__M7CVPdjkQFUv9j2pr7QJiQ9bWW_5jXjR9TcjY=" alt=`${product.title}`)
                    .card__content 
                        h2.product__price $1.00
                        p.product_description A cool book.
                    .card__actions  
                        button.btn Add to cart
    else 
        h1 No product
