<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <h1>Cart</h1>
        <% if (products.length > 0) { %>
            <ul>
                <% products.forEach((p) => { %>
                    <li><%= p.productData.title %> - $<%= p.productData.price %> (<%= p.quantity %>)</li>
                <% }) %>
            </ul>
        <% } else { %>
            No items in your cart.
        <% } %>
    </main>


